{% comment %} Newsletter Popup for Raei {% endcomment %}
<div id="newsletter-popup" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(250,246,240,0.95); z-index:1000; display:flex; justify-content:center; align-items:center;">
  <div style="background:white; padding:40px; border-radius:10px; text-align:center; max-width:400px; width:90%;">
    <h2>stay connected</h2>
    <p>be the first to know when raei launches.</p>
    <form method="post" action="/contact#newsletter">
      <input type="hidden" name="form_type" value="customer">
      <input type="email" name="contact[email]" placeholder="Email address" required style="width:100%;padding:10px;margin-bottom:10px;">
      <button type="submit" style="width:100%;">notify me</button>
    </form>
    <br>
    <button onclick="closePopup()">close</button>
  </div>
</div>
