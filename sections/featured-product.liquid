{% comment %} Featured Product (The Nest Tote) {% endcomment %}
<div class="section featured-product" style="text-align: center;">
  <h2>the nest tote</h2>
  {% assign product = all_products['nest-tote'] %}
  {% if product %}
    <a href="{{ product.url }}">
      <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title }}" style="max-width:300px;width:100%;margin:20px auto;">
      <p>{{ product.title }}</p>
      <p>{{ product.price | money }}</p>
    </a>
  {% else %}
    <p>Product coming soon.</p>
  {% endif %}
</div>
